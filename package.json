{
    "name": "learn-module-creator",
    "displayName": "Microsoft Learn module creator",
    "description": "A Visual Studio Code extension to create the initial structure for new Microsoft Learn modules.",
    "version": "0.0.1",
    "publisher": "patridgedev",
    "engines": {
        "vscode": "^1.27.0"
    },
    "categories": [
        "Other"
    ],
    "contributes": {
        "commands": [
            {
                "command": "extension.generateModule",
                "title": "Generate a Microsoft Learn module"
            }
        ]
    },
    "main": "./out/extension",
    "activationEvents": [
        "onCommand:extension.generateModule"
    ],
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "@types/handlebars": "^4.0.39",
        "@types/mkdirp": "^0.5.2",
        "@types/q": "^1.5.1",
        "handlebars": "^4.0.12",
        "mkdirp": "^0.5.1",
        "q": "^1.5.1"
    }
}
